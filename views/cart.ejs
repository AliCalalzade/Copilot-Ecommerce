<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <title>Sepet - E-Ticaret Sitesi</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <header>
        <h1>E-Ticaret Sitesi</h1>
        <nav>
            <a href="/">Ana Sayfa</a> |
            <a href="/cart">Sepet</a>
        </nav>
    </header>
    <main>
        <h2>Sepetiniz</h2>
        <% if (cartDetails && cartDetails.length> 0) { %>
            <div class="cart-items">
                <% cartDetails.forEach(function(item) { %>
                    <div class="cart-item">
                        <div class="cart-item-image">
                            <img src="<%= item.image ? item.image : 'https://picsum.photos/100/100?random=2' %>"
                                alt="<%= item.name %>">
                        </div>
                        <div class="cart-item-info">
                            <h3>
                                <%= item.name %>
                            </h3>
                            <p>Adet: <%= item.quantity %>
                            </p>
                            <p>Birim Fiyat: <%= item.price %> TL</p>
                            <p>Toplam: <%= item.total %> TL</p>
                            <div class="cart-controls">
                                <a href="/cart/increase/<%= item.id %>" class="button control-button">Artır</a>
                                <a href="/cart/decrease/<%= item.id %>" class="button control-button">Azalt</a>
                                <a href="/cart/remove/<%= item.id %>"
                                    class="button control-button delete-button">Sil</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
            <p class="cart-total">Genel Toplam: <%= total %> TL</p>
            <a href="/checkout" class="button">Checkout</a>
            <% } else { %>
                <p>Sepetiniz boş.</p>
                <% } %>
    </main>
    <footer>
        &copy; 2023 E-Ticaret Sitesi
    </footer>
</body>

</html>
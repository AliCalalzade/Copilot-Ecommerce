<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <title>E-Ticaret Sitesi</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <header>
        <h1>E-Ticaret Sitesi</h1>
        <nav>
            <a href="/">Ana Sayfa</a> |
            <a href="/cart">Sepet</a>
        </nav>
    </header>
    <main>
        <h2>Ürünler</h2>
        <div class="product-grid">
            <% products.forEach(function(product,index) { %>
                <div class="product-card">
                    <div class="product-image">
                        <img src="<%= product.image ? product.image : `https://picsum.photos/500/500?random=${index}` %>"
                            alt="<%= product.name %>">
                    </div>
                    <div class="product-info">
                        <h2>
                            <%= product.name %>
                        </h2>
                        <p class="price">
                            <%= product.price %> TL
                        </p>
                        <p class="description">
                            <%= product.description %>
                        </p>
                        <a href="/add_to_cart/<%= product.id %>" class="button add-to-cart">Sepete Ekle</a>
                    </div>
                </div>
                <% }); %>
        </div>
    </main>
    <footer>
        &copy; 2023 E-Ticaret Sitesi
    </footer>
</body>

</html>